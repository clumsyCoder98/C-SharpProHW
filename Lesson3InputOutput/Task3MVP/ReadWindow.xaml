<Window x:Class="Task3MVP.ReadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task3MVP"
        mc:Ignorable="d"
        Title="Read File" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="AdressInput" HorizontalAlignment="Left" Margin="40,10,0,0" Text="Place file adress here" TextWrapping="Wrap" VerticalAlignment="Top" Width="561" Height="20"/>
        <TextBox x:Name="FileOutput" HorizontalAlignment="Center" Margin="0,60,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="720" Height="330"/>
        <Button x:Name="OpenButton" Content="Open File" HorizontalAlignment="Left" Margin="640,10,0,0" VerticalAlignment="Top" Height="20" Width="120" Click="OpenButton_Click"/>

    </Grid>
</Window>
