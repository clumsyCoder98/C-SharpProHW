<Window x:Class="Task3MVP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task3MVP"
        mc:Ignorable="d"
        Title="FileExplorer" Height="200" Width="400">
    <Grid>
        <TextBox x:Name="textInput" HorizontalAlignment="Left" Text="Enter file name here" TextWrapping="Wrap" VerticalAlignment="Center" Width="250" Margin="30,0,0,0"/>
        <Button x:Name="src_btn" Content="Search" HorizontalAlignment="Left" Margin="310,0,0,0" VerticalAlignment="Center" Height="30" Width="60" Click="src_btn_Click"/>
        <Button x:Name="read_btn" Content="Read" HorizontalAlignment="Left" Margin="30,120,0,0" VerticalAlignment="Top" Height="30" Width="60" Click="read_btn_Click"/>
        <Button x:Name="compr_btn" Content="Compress" HorizontalAlignment="Left" Margin="125,120,0,0" VerticalAlignment="Top" Height="30" Width="60" Click="compr_btn_Click"/>

    </Grid>
</Window>
