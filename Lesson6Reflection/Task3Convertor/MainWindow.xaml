<Window x:Class="Task3Convertor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task3Convertor"
        mc:Ignorable="d"
        Title="TempConverter" Height="200" Width="400">
    <Grid>
        <TextBox x:Name="InTemp" HorizontalAlignment="Left" Margin="50,85,0,0" Text="Celsius" TextWrapping="Wrap" VerticalAlignment="Top" Width="70"/>
        <TextBox x:Name="OutTemp" HorizontalAlignment="Left" Margin="280,85,0,0" Text="Fahrenheit" TextWrapping="Wrap" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="ConvertButton" Content="Convert" HorizontalAlignment="Center" Margin="0,75,0,0" VerticalAlignment="Top" Height="35" Width="70" Click="ConvertButton_Click"/>

    </Grid>
</Window>
